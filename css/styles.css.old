/* Reset some default styles */
body, h1, h2, p {
    margin: 0;
    padding: 0;
}

/* Style the header and navigation */
header {
    background-color: #333;
    color: #fff;
    padding: 1rem;
}

/* Style the main sections */
section {
    margin: 40px auto;
    max-width: 800px;
    padding: 20px;
    border: 1px solid #ddd;
    background-color: #f9f9f9;
    box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
    border-radius: 5px;
}

/* Style section headings */
section h2 {
    font-size: 24px;
    color: #333;
}

/* Style paragraphs within sections */
section p {
    font-size: 16px;
    line-height: 1.6;
    color: #666;
}

/* Style links within sections */
section a {
    color: #007BFF;
    text-decoration: none;
    font-weight: bold;
}

/* Add some margin to paragraphs for better spacing */
section p + p {
    margin-top: 15px;
}

/* Style the project divs in the Portfolio section */
.project {
    margin: 20px 0;
    padding: 10px;
    border: 1px solid #ccc;
    background-color: #fff;
    box-shadow: 0px 0px 5px rgba(0, 0, 0, 0.1);
    border-radius: 5px;
}

.project-content {
    display: flex;
    align-items: center;
    justify-content: space-between;
}

/* Style project descriptions */
.project-description {
    flex-grow: 1;
    padding: 0 10px;
}

.project h3 {
    font-size: 20px;
    color: #333;
}

.project p {
    font-size: 14px;
    color: #666;
}

.project a {
    color: #007BFF;
    text-decoration: none;
    font-weight: bold;
}

/* Style project images */
.project img {
    max-width: 400px;
    height: auto;
    margin: 0 10px;
}

/* Alternate the order of project content for every other project */
.project:nth-child(even) .project-content {
    flex-direction: row-reverse;
}

.project:nth-child(even) img {
    margin: 0 0 0 10px;
}

/* Style the Contact section */
#contact {
    text-align: center;
}

/* Apply a hover effect to links */
a:hover {
    text-decoration: underline;
}
